{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    // "paths": {
    //   "@/*": ["src/*"],
    //   "@components/*": ["src/components/*"],
    //   "@styles/*": ["src/styles/*"],
    //   "@utils/*": ["src/utils/*"],
    //   "@hooks/*": ["src/hooks/*"],
    //   "@pages/*": ["src/pages/*"],
    //   "@lib/*": ["src/lib/*"]
    // },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "shadcn/**/*"],
  "exclude": ["node_modules", "dist"]
}
